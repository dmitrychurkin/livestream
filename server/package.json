{
  "name": "livestream",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch-ts": "tsc --watch --preserveWatchOutput --pretty",
    "watch-node": "nodemon --inspect dist",
    "watch": "npm run build & concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.18.2",
    "apollo-server-cache-redis": "^1.2.2",
    "dotenv": "^8.2.0",
    "fastify": "^3.7.0",
    "fastify-cors": "^4.1.0",
    "fastify-helmet": "^5.0.3",
    "graphql": "^15.3.0",
    "lodash.mergewith": "^4.6.2",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/lodash.mergewith": "^4.6.6",
    "@types/node": "^14.11.10",
    "@types/socket.io": "^2.1.11",
    "concurrently": "^5.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "tsc --noEmit",
      "prettier --write",
      "git add"
    ]
  }
}
